@model Lab1.Models.DepartmentModel
@{
    bool isEdit = Model?.DeptID > 0;
    ViewData["Title"] = isEdit ? "Edit Department" : "Add Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>@ViewData["Title"]</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Department" asp-action="Index">Department</a>
                </li>
                <li class="breadcrumb-item active">@ViewData["Title"]</li>
            </ol>
        </nav>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="AddEdit" method="post" class="row g-3 mt-2">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="DeptID" />

                <div class="col-12">
                    <label asp-for="DepartmentName" class="form-label"></label>
                    <input asp-for="DepartmentName" class="form-control" placeholder="Enter department name" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>

               <div class="col-12 d-flex justify-content-end gap-2">
                    <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

